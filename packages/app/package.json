{
  "name": "@hanghae-plus/7th-blog",
  "version": "0.0.1",
  "engines": {
    "node": ">=22",
    "pnpm": ">=10"
  },
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "pnpm run build:client && pnpm run build:server",
    "build:client": "vite build --ssrManifest --outDir dist/client && shx cp ./dist/client/index.html ./dist/client/template.html && shx cp ./dist/client/index.html ./dist/client/404.html",
    "build:server": "vite build --ssr src/main-server.tsx --outDir dist/server",
    "tsc": "tsc --noEmit",
    "lint:fix": "eslint --fix",
    "prettier:write": "prettier --write ./src",
    "generate": "cross-env NODE_ENV=production node ./server.js",
    "generate:with-build": "pnpm build && pnpm generate",
    "preview": "vite preview --outDir dist/client",
    "preview:with-generate": "pnpm generate:with-build && pnpm preview"
  },
  "dependencies": {
    "@hanghae-plus/domain": "workspace:*",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@tailwindcss/vite": "^4.1.11",
    "@tanstack/react-query": "^5.84.1",
    "@uiw/react-markdown-preview": "^5.1.5",
    "axios": "^1.11.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "compression": "^1.8.1",
    "es-toolkit": "^1.39.8",
    "lucide-react": "^0.536.0",
    "react": "latest",
    "react-dom": "latest",
    "react-router": "^7.7.1",
    "sharp": "^0.34.5",
    "sirv": "^3.0.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.11",
    "vite-plugin-svgr": "^4.3.0",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@babel/core": "latest",
    "@babel/plugin-transform-react-jsx": "latest",
    "@eslint/js": "^9.16.0",
    "@types/compression": "^1.8.1",
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.13",
    "@types/react": "latest",
    "@types/react-dom": "latest",
    "@types/use-sync-external-store": "latest",
    "@vitejs/plugin-react-oxc": "latest",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "express": "^5.1.0",
    "msw": "^2.10.2",
    "prettier": "^3.4.2",
    "shx": "^0.3.4",
    "tsx": "^4.20.3",
    "tw-animate-css": "^1.3.6",
    "typescript": "^5.8.3",
    "vite": "npm:rolldown-vite@latest"
  }
}